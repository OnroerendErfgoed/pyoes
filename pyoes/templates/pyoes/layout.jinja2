<!doctype html>
<html class="no-js" lang="en">

{% set default_app_package = 'pyoes' -%}
{% set app_package = app_package|default(default_app_package, true) -%}

{% set active_main_nav = active_main_nav|default('home') -%}
{% set default_main_nav = [] -%}
{% set main_nav = main_nav|default(default_main_nav) -%}

{% set default_footer_nav = [
	('Toegankelijkheid', '/toegankelijkheid'),
	('Juridische Informatie', '/juridische-informatie')
] -%}
{% set footer_nav = footer_nav|default(default_footer_nav) %}


<head>
	{% block html_header scoped %}
    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{% block html_title %}Onroerend Erfgoed{% endblock %}</title>

    <script type="text/javascript" src="//use.typekit.net/znn6biy.js"></script>

    <script type="text/javascript">
        try {
            Typekit.load();
        } catch (e) {
            console.log(e);
        }
	</script>

    <link rel="stylesheet"
		  href="{% block app_css %}{{ request.static_path(app_package + ':static/css/app.css') }}{% endblock %}"/>
	
	<script src="{{ request.static_path(app_package + ':static/bower_components/modernizr/modernizr.js') }}"></script>

    {% block css -%}
        {% set default_css_files = []-%}

        {% set css_files = css_files|default(default_css_files) -%}
        {% for css in css_files -%}
        <link rel="stylesheet" href="{{ css }}"/>
        {% endfor %}
    {% endblock -%}

    {% block javascript scoped -%}
        {% set default_js_files = [
			request.static_path(app_package + ':static/bower_components/jquery/dist/jquery.min.js'),
		] -%}
        {% set js_files = js_files|default(default_js_files) -%}
        {% for js in js_files -%}
            <script type="text/javascript" src="{{ js }}"></script>
        {% endfor -%}
    {% endblock -%}

    {% block ga_tracker %}
        {% set ga_key=ga_key|default('UA-XXXXX-X') %}
        <script type="text/javascript">

            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', '{{ ga_key }}']);
            _gaq.push(['_setDomainName', 'onroerenderfgoed.be']);
            _gaq.push(['_trackPageview']);

            -(function () {
                var ga = document.createElement('script');
                ga.type = 'text/javascript';
                ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0];
                s.parentNode.insertBefore(ga, s);
            })();

        </script>
	{% endblock %}
    {% endblock %}
</head>

<body>

<div class="container">
    {% block header scoped %}
        <header class="header">
            <div class="row upper-header">
                <div class="large-3 columns">
                    <hgroup class="site-title">
                        <h1><a class="block" href="/">{% block header_title %}Onroerend erfgoed{% endblock %}</a></h1>
                    </hgroup>
                </div>
                <div class="large-9 columns">
                    <nav class="top-nav">
                        {% set default_top_nav = [('Over deze site', '/over-deze-site'), ('Nieuws', '/nieuws'),('Veelgestelde vragen', '/faq'),('Contact', '/contact')] %}
                        {% set top_nav = top_nav|default(default_top_nav) %}
                        <ul>
                            {% for caption, href in top_nav %}
                                <li><a href="{{ href }}">{{ caption }}</a></li>
                            {% endfor %}
                        </ul>
                    </nav>
					<div class="row">
						<div class="small-12 columns">
							<div class="mobile-menu">
								<select id="mobile-menu-select">
									{% for id, caption, href in main_nav %}
									<option{% if id == active_main_nav %} 
										selected="selected"{% endif %}
										value="{{ href }}">
										{{ caption }}
									</option>
									{% endfor %}
								</select>
							</div>
						</div>
                        <div class="large-8 columns main-nav-wrapper">
                            {% block main_nav %}
                                <nav class="main-nav">
                                    <ul>
                                        {% for id, caption, href in main_nav %}
                                            <li{% if id == active_main_nav %} class="active"{% endif %}><a
                                                    href="{{ href }}">{{ caption }}</a></li>
                                        {% endfor %}
                                    </ul>
                                </nav>
                            {% endblock %}
                        </div>
                        <div class="large-4 columns searchfield-wrapper">
                            <form method="get" action="{{ zoeken_action|default('#') }}">
                                <div class="row collapse searchfield">
                                    <div class="small-9 columns">
                                        <input type="search" class="search-input" id="query" name="query"
                                               placeholder="{{ zoeken_placeholder|default('Zoek op deze site...') }}"/>
                                    </div>
                                    <div class="small-3 columns">
                                        <input type="submit" class="icon postfix" value="">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="lower-header">
                <div class="row relative">
					<img class="overlay-sub" src="{{ request.static_path(app_package + ':static/img/pyoes/light-banner.png') }}"/>
					<div class="small-12 columns">
						<nav class="broodkruimel-wrapper">
							{% set default_crumbs = [('Je bent hier:', '#', 'unavailable'), ('Home', '/', 'current')] %}
							{% set crumbs = crumbs|default(default_crumbs) %}
							<ul class="broodkruimel">
								{% for caption, href, state in crumbs %}
									<li{% if state != '' %} class="{{ state }}"{% endif %}>
										<a href="{{ href }}">{{ caption }}</a></li>
								{% endfor %}
							</ul>
						</nav>
					</div>
                </div>
            </div>
        </header>
    {% endblock %}

    {% block content scoped %}
	{% endblock %}

	{% block footer scoped %}
		{% include "pyoes/footer.jinja2" %}
    {% endblock %}
</div>

<script src="{{ request.static_path(app_package + ':static/bower_components/foundation/js/foundation.js') }}"></script>
<script src="{{ request.static_path(app_package + ':static/js/app.js') }}"></script>

</body>
</html>

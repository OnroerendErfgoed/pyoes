						<li><i class="fa fa-check" style="border: 2px solid silver;"> fa-check</i></li>
						<li><i class="fa fa-remove" style="font-size: 2em;"> fa-remove</i></li>
						<li><i class="fa fa-download" style="color: purple;"> fa-download</i></li>
						<li><i class="fa fa-globe" style="font-size: 2em; color: teal; font-weight: bold;"> fa-globe</i></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
